generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int          @id @default(autoincrement())
  username       String       @unique
  email          String       @unique
  password       String
  ankamaUsername String?
  createdAt      DateTime     @default(now())
  Personnages    Personnage[]
  updater        Portail[]
  Panoplies      Panoplie[]
}

model Personnage {
  id         Int    @id @default(autoincrement())
  user       User   @relation(fields: [userId], references: [id])
  userId     Int
  name       String
  race       String?
  level      String
  server     String
  link       String
  stuff      String?
  completion Int?
  successPts Int?
  Panoplie   Panoplie[]
  mainChar   Boolean  @default(false)
  imagelink  String?  @db.Text
  title      String?
  lastSucces String?
}

model Panoplie {
  id          Int    @id @default(autoincrement())
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
  character   Personnage @relation(fields: [characterId], references: [id])
  characterId Int
  name        String
  stuff       String
  tags        String
}

model Portail {
  name        String   @unique
  server      String
  position    String
  lastUpdate  DateTime @default(now())
  updater     User     @relation(fields: [updaterName], references: [username])
  dislike     Int?
  updaterName String
  image       String?
}
